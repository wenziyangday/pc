.container
  .title-home
    padding 35px 0 15px
    margin-bottom 55px
    font-size 30px
    text-align center
    line-height 1
    border-bottom 1px solid #eeeeee
    .line
      position relative
      top 16px
      width 85px
      height 3px
      margin 0 auto
      background #c79a36
  .more-page
    width 244px
    height 62px
    line-height 62px
    text-align center
    font-size 28px
    background #c79a36
    border-radius 5px
    margin 0 auto
    a
      display block
      color #ffffff
  .more-page:hover
    opacity 0.8
  .proxy
    padding-bottom 55px
    li
      float left
      width 234px
      padding 12px 42px
      border-right 1px dashed #e5e5e5
      .img-proxy
        width 95px
        height 95px
        line-height 95px
        text-align center
        border-radius 50%
        margin 0 auto
        background #dce3e6
        img
          vertical-align middle
      .title-proxy
        padding 18px 0
        text-align center
        color #333333
        font-size 21px
        line-height 1
      .content-proxy
        line-height 1.5
        text-align justify
        color #828181
        font-size 18px
    li:last-child
      border-right 0
  .cases
    position relative
    padding-bottom 55px
    background #f7f7f7
    .cases-swiper
      width 1140px
      margin 0 auto
      overflow hidden
      margin-bottom 55px
      .content-cases
        text-align justify
        font-size 17px
        line-height 1.5
      .title-cases
        position relative
        width 248px
        height 53px
        margin -26px auto 33px
        font-size 21px
        text-align center
        line-height 53px
        background #5a5a5a
        z-index 99
        a
          color #ffffff
    .control-cases
      position absolute
      top 270px
      width 1300px
      div
        display inline-block
        width 38px
        height 38px
        text-align center
        line-height 38px
        background #d1d2d4
        border-radius 50%
        color #ffffff
        &.swiper-next
          float right
        &:hover
          cursor pointer
        &.swiper-button-disabled
          cursor not-allowed
  .img-ability
    width 100%
    height 593px
    background-size cover
    margin-bottom 52px
  .about
    margin-top 45px
    .img-about
      float left
      width 50%
      height 550px
      background-size cover!important
    .content-about
      position relative
      float right
      width 50%
      height 550px
      background url(../images/about-bg.png) center repeat-x
      z-index 0
      .inner-content-about
        position absolute
        width 615px
        height 550px
        padding-left 45px
        z-index 6
        .title-about
          padding-top 27px
          line-height 1
          font-size 36px
          color #000000
          span
            display block
            padding 12px 0
            margin-bottom 20px
            line-height 1
            font-size 21px
            color #828282
            border-bottom 1px solid #828282
        .content-inner-about
          padding-right 10px
          text-align justify
          font-size 18px
          color #222222
          line-height 1.5
          a
            color #ff4a00
        li
          float left
          margin-top 20px
          padding 0 31px
          text-align center
          border-right 1px dashed #c1c1c1
          div
            line-height 72px
            img
              vertical-align middle
          b
            display block
            padding-bottom 11px
            line-height 1
            font-weight normal
            font-size 22px
          em
            display block
            padding-bottom 15px
            line-height 1
            font-size 17px
            color #9a9a9a
          em:first-letter
            text-transform uppercase
  .show
    margin-top 1px
    height 215px
    background url(../images/show.png) center no-repeat
    .inner-show
      position relative
      top 22px
      margin 0 0 22px
      border-left 1px dashed #fff
      li
        float left
        width 323px
        padding 30px 0 50px
        text-align center
        border-right 1px dashed #fff
        div
          font-size 41px
          color #ffffff
          line-height 1
          em
            font-size 65px
            line-height 1
            font-family "Adobe 宋体 Std L"
            font-weight lighter
            color #ffffff
        span
          display block
          padding-top 5px
          font-size 24px
          color #ffffff
          line-height 1
  .news
    margin-bottom 52px
    .control-news
      margin-bottom 39px
      text-align center
      span
        display inline-block
        padding 0 34px
        line-height 50px
        font-size 21px
        border-radius 5px
      span.active, span:hover
        color #ffffff
        background #c79a36
        cursor pointer
    .target-news
      div.hide
        display none
      li
        float left
        width 413px
        margin-right 30px
        .img-news
          position relative
          .date-news
            position absolute
            width 96px
            height 87px
            text-align center
            z-index 9
            background rgba(199, 154, 54, 0.65)
            color #ffffff
            font-size 20px
            span
              display block
              padding-top 10px
              font-size 30px
        .title-news
          padding 18px 0
          font-size 20px
          line-height 1
          white-space nowrap
          text-overflow ellipsis
          overflow hidden
        .content-news
          color #8f8f8f
          font-size 16px
          line-height 1.5
        .more-news
          margin-top 22px
          font-size 17px
          font-family "Harlow Solid Italic"
          &:first-letter
            text-transform uppercase
      li:last-child
        margin-right 0
  .partner
    height 420px
    background url(../images/partner.png) top center no-repeat
    .inner-parter
      width 100%
      overflow-x hidden
      .swiper-slide img
        border 1px solid #cfcece
    .control-partner
      position relative
      text-align center
      margin-bottom 25px
      div
        display inline-block
        width 24px
        height 24px
        line-height 24px
        background #73645f
        color #ffffff
        &:hover
          background #eb4f36
          cursor pointer
        &.swiper-button-disabled
          cursor not-allowed
